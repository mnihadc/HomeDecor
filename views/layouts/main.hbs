    <style>
        /* General Page and Header */
        body,
        html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            height: 100%;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #1D1E22;
            /* Midnight Blue */
            height: 80px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            color: #F5F5F7;
            /* Silver */
            font-size: 2rem;
            font-weight: bold;
            text-decoration: none;
            line-height: 80px;
        }

        .navbar-brand img {
            width: 40px;
            height: 40px;
            margin-right: 10px;
            background-color: #4A5842;
            /* Alpine Green */
            border-radius: 50%;
            padding: 5px;
        }

        .navbar-nav .nav-link {
            color: #F5F5F7;
            /* Silver */
            font-size: 1.2rem;
            font-weight: 600;
            padding: 10px 20px;
            text-decoration: none;
        }

        .navbar-nav .nav-link:hover {
            color: #007AFF;
            /* Pacific Blue */
        }

        .icon-small {
            width: 30px;
            height: 30px;
            color: #1D1E22;
            /* Midnight Blue */
            background: #8E8E93;
            /* Graphite */
            border-radius: 1.5rem;
            padding: 4px;
        }

        /* Responsive Navbar */
        @media (max-width: 767px) {
            .navbar {
                height: auto;
            }

            .navbar-toggler {
                border: none;
                font-size: 1.5rem;
                color: #F5F5F7;
                /* Silver */
            }

            .navbar-nav {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                margin-left: 0;
            }

            .nav-link {
                font-size: 1.1rem;
                padding: 10px;
            }

            .dropdown-menu {
                width: 100%;
                border: none;
                box-shadow: none;
            }
        }

        .dropdown-menu .nav-link {
            color: #1D1E22;
            /* Midnight Blue */
        }

        .dropdown-menu .nav-link:hover {
            background-color: #F5F5F7;
            /* Silver */
        }

        /* Main Content */
        .main-content {
            padding-top: 70px;
        }

        /* Footer Styling */
        .footer {
            background-color: #3A3B3F;
            /* Space Gray */
            color: #fff;
            padding: 60px 0;
            position: relative;
            border-top: 5px solid #F8D12F;
            /* Gold */
        }

        .footer h3 {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #F5F5F7;
            /* Silver */
        }

        .footer .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 0 15px;
        }

        .footer ul {
            list-style: none;
            padding: 0;
        }

        .footer ul li {
            margin: 10px 0;
        }

        .footer ul li a {
            color: #F5F5F7;
            /* Silver */
            text-decoration: none;
            font-size: 14px;
        }

        .footer ul li a:hover {
            text-decoration: underline;
            color: #F8D12F;
            /* Gold */
        }

        .footer .social-icons a {
            color: #F5F5F7;
            /* Silver */
            font-size: 20px;
            margin-right: 15px;
            transition: color 0.3s ease;
        }

        .footer .social-icons a:hover {
            color: #F8D12F;
            /* Gold */
        }

        .footer .subscribe input[type="text"] {
            width: 300px;
            padding: 10px;
            margin-right: 10px;
            border: none;
            border-radius: 20px;
            margin-bottom: 20px;
        }

        .footer .subscribe input[type="submit"] {
            padding: 10px 20px;
            background-color: #F8D12F;
            /* Gold */
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .footer .subscribe input[type="submit"]:hover {
            background-color: #E64A19;
            /* Darker Gold */
        }

        .footer .gallery img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .footer .gallery img:hover {
            transform: scale(1.1);
        }

        .footer .site-logo {
            font-size: 24px;
            font-weight: bold;
            color: #007AFF;
            /* Pacific Blue */
            text-align: center;
            padding-top: 20px;
        }

        .footer .site-logo a {
            color: #007AFF;
            /* Pacific Blue */
            text-decoration: none;
        }

        .footer .site-logo a:hover {
            color: #F8D12F;
            /* Gold */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .footer .container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .footer .social-icons {
                margin-top: 20px;
            }

            .footer .subscribe input[type="text"] {
                width: 80%;
                margin-bottom: 15px;
            }

            .footer .gallery img {
                max-width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>

</head>

