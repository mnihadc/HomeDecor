<!-- Payment-Cancel.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .cancel-card {
            max-width: 600px;
            margin: 50px auto;
            opacity: 0;
            animation: fadeIn 1s forwards;
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .icon {
            font-size: 5rem;
            color: #dc3545;
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        .progress-bar-container {
            width: 100%;
            margin-top: 20px;
        }

        .progress-bar {
            height: 30px;
            transition: width 1s ease-in-out;
        }

        .order-summary {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
        }

        .order-summary h5 {
            color: #007bff;
        }

        .order-summary li {
            font-size: 1.1rem;
            margin-bottom: 8px;
        }

        .order-summary li strong {
            color: #333;
        }

        /* Animation for the entire page */
        .animated-title {
            animation: slideInFromLeft 1s ease-out;
        }

        @keyframes slideInFromLeft {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(0);
            }
        }

        /* Style for the progress bar text */
        .progress-label {
            text-align: center;
            margin-top: 5px;
            font-weight: bold;
        }

        /* Additional Cancel Message Styling */
        .cancel-message {
            color: #dc3545;
            font-size: 1.25rem;
            font-weight: bold;
            margin-top: 15px;
        }

        .order-id {
            font-size: 1.1rem;
            color: #007bff;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="card shadow-lg cancel-card">
                    <div class="card-body text-center">
                        <!-- Cancel Icon -->
                        <div class="icon mb-4">
                            <i class="bi bi-x-circle"></i>
                        </div>

                        <!-- Cancel Title -->
                        <h3 class="card-title text-danger animated-title">{{title}}</h3>
                        <p class="lead text-muted">{{message}}</p>

                        <!-- Cancel Confirmation Message -->
                        <div class="cancel-message">
                            <p>Your order has been canceled! ðŸ˜”</p>
                            <p class="order-id">Order ID: #</p>
                        </div>

                        <!-- Cancel Progress (Optional) -->
                        <div class="progress-bar-container">
                            <label for="orderProgress" class="progress-label">Your order was canceled:</label>
                            <div class="progress">
                                <div class="progress-bar bg-danger" style="width: 100%;" role="progressbar"
                                    aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>

                        <!-- Back to Orders Button -->
                        <a href="/order/order-summery" class="btn btn-primary mt-4">Go Back to Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS & Icons -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>

</html>