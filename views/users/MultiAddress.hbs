<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Addresses</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Scoped Styles Only for this Page */
    .address-page {
      background-color: #F5F5F7;
      font-family: Arial, sans-serif;
      color: #121212;
      min-height: 100vh;
      padding: 1rem;
      /* Adjust padding for fixed navbar */
    }

    .address-page h1 {
      color: #1D1E22;
    }

    .address-page .card {
      background-color: #F5F5F7;
      border: 1px solid #8E8E93;
      border-radius: 8px;
      margin-bottom: 20px;
      cursor: pointer;
      position: relative;
    }

    .address-page .card-header {
      background-color: #1D1E22;
      color: #F5F5F7;
      font-weight: bold;
      font-size: 1.2rem;
    }

    .address-page .card-body {
      color: #636366;
    }

    .address-page .card.selected {
      border: 4px solid #2a6e02;
    }

    .address-page .selected-badge {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: #2a6e02;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.8rem;
    }

    .address-page .card-columns {
      column-count: 2;
    }

    @media (max-width: 768px) {
      .address-page .card-columns {
        column-count: 1;
      }
    }

    .footer {
      background-color: #3A3B3F;
      color: #4A5842;
      padding: 20px;
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="address-page">
    <div style="display: flex;justify-content: end;padding-right: 2rem;padding-top: 5px;">
      <a href="/address/get-create-address">
        <button type="button" class="btn btn-success">Create Address</button>
      </a>
    </div>
    <div class="container">
      <div class="card-columns">
        {{#each addresses}}
        <div class="p-2">
          <div class="card" onclick="selectAddress(this)">
            <div class="card-header">{{this.fullName}}</div>
            <div class="card-body">
              <p><strong>Email:</strong> {{this.email}}</p>
              <p><strong>Gender:</strong> {{this.gender}}</p>
              <p><strong>Date of Birth:</strong> {{this.dob}}</p>
              <p><strong>Phone:</strong> {{this.phone}}</p>
              <p><strong>Address:</strong> {{this.address}}</p>
              <p><strong>City:</strong> {{this.city}}</p>
              <p><strong>District:</strong> {{this.district}}</p>
              <p><strong>State:</strong> {{this.state}}</p>
              <p><strong>Postal Code:</strong> {{this.postalCode}}</p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <footer class="footer">
    <p>&copy; 2024 Address Management | All Rights Reserved</p>
  </footer>

  <script>
    function selectAddress(card) {
      document.querySelectorAll('.card').forEach(c => {
        c.classList.remove('selected');
        const badge = c.querySelector('.selected-badge');
        if (badge) badge.remove();
      });

      card.classList.add('selected');
      const badge = document.createElement('div');
      badge.className = 'selected-badge';
      badge.textContent = 'Selected';
      card.appendChild(badge);
    }
  </script>

</body>

</html>